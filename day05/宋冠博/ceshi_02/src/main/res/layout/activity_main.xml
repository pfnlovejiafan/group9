<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">
    
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >




            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_40"
                >

                <SearchView
                    android:layout_width="@dimen/dp_264"
                    android:layout_height="@dimen/dp_40"
                    android:background="@drawable/a"
                    android:queryHint="搜索诗人名字 诗词关键字"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv"
                    android:src="@drawable/z"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_150"
                android:src="@drawable/c"
                android:layout_marginTop="@dimen/dp_10"
                />
            <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:id="@+id/tab1"
                app:tabIndicatorHeight="@dimen/dp_0"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="@dimen/dp_82"
                    android:layout_height="@dimen/dp_19"
                    android:text="诗歌群PK"
                    android:textSize="@dimen/dp_17"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4CAF50"
                    android:text="08-01"
                    android:layout_marginLeft="@dimen/dp_130"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日晚"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00"
                    android:textColor="#4CAF50"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="@dimen/dp_342"
                android:layout_height="@dimen/dp_170"
                android:src="@drawable/v"
                />
            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="wrap_content"
                android:gravity="center"
                >
                <Button
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_30"
                    android:text="丁香诗社"
                    android:background="@drawable/m"
                    />
                <Button
                    android:layout_width="@dimen/dp_75"
                    android:layout_height="@dimen/dp_30"
                    android:text="月季诗社"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:background="@drawable/n"
                    />
            </LinearLayout>
            
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_136"
                android:layout_height="@dimen/dp_14"
                android:text="这两个诗社你更看好谁"
                />
            
            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_215"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/dp_77"
                        android:layout_height="@dimen/dp_20"
                        android:text="荣誉诗人"
                        android:textSize="@dimen/dp_18"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_16"
                        android:text="更多 >"
                        android:layout_marginLeft="@dimen/dp_210"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_181"
                    android:id="@+id/rv_a"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/dp_77"
                        android:layout_height="@dimen/dp_20"
                        android:text="一起读诗"
                        android:textSize="@dimen/dp_18"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_16"
                        android:text="更多 >"
                        android:layout_marginLeft="@dimen/dp_210"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_b"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/dp_77"
                        android:layout_height="@dimen/dp_20"
                        android:text="诗词佳句"
                        android:textSize="@dimen/dp_18"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_16"
                        android:text="更多 >"
                        android:layout_marginLeft="@dimen/dp_210"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_c"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_340"
                android:layout_height="@dimen/dp_215"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="@dimen/dp_77"
                        android:layout_height="@dimen/dp_20"
                        android:text="每周佳作"
                        android:textSize="@dimen/dp_18"
                        />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rv_d"
                    />

            </LinearLayout>

        </LinearLayout>




    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_54"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tab2"
        android:background="#ffffff"
        />
</androidx.constraintlayout.widget.ConstraintLayout>