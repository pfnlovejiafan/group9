<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/dp_0"
    tools:context="com.example.jpush_test.HomeActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tab"
        android:id="@+id/nl"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textSize="@dimen/dp_18"
                    android:layout_gravity="center"
                    />
            </androidx.appcompat.widget.Toolbar>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:src="@drawable/a1"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_a1"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出行必备"
                    android:textSize="@dimen/dp_20"
                    android:layout_margin="@dimen/dp_10"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_168"
                        android:layout_height="@dimen/dp_71"
                        android:src="@drawable/a2"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/dp_168"
                        android:layout_height="@dimen/dp_71"
                        android:src="@drawable/a3"
                        android:layout_weight="1"
                        />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_a2"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="海外攻略"
                        android:textSize="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_10"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="#0DE315"
                        android:layout_marginLeft="@dimen/dp_230"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="@dimen/dp_152"
                        android:layout_height="@dimen/dp_95"
                        android:src="@drawable/a4"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/dp_152"
                        android:layout_height="@dimen/dp_95"
                        android:src="@drawable/a5"
                        android:layout_weight="1"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_a3"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="国内攻略"
                        android:textSize="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_10"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="#0DE315"
                        android:layout_marginLeft="@dimen/dp_230"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_124"
                        android:layout_weight="1"
                        android:orientation="vertical"

                        >
                        <ImageView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:src="@drawable/a6"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_16"
                            android:text="大理DAU"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_124"
                        android:layout_weight="1"
                        android:orientation="vertical"

                        >
                        <ImageView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:src="@drawable/a7"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_16"
                            android:text="成都CHENGDU"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_124"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100"
                            android:src="@drawable/a8"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/dp_16"
                            android:text="杭州HANGZHOU"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_a4"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="魅力海岛"
                        android:textSize="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_10"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看更多"
                        android:textColor="#0DE315"
                        android:layout_marginLeft="@dimen/dp_230"
                        android:layout_marginTop="@dimen/dp_10"
                        />
                </LinearLayout>

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_242"
                   android:src="@drawable/a9"
                   />
            </LinearLayout>






            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_a6"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_20"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="悠然古镇"
                        android:textSize="@dimen/dp_20"
                        android:layout_margin="@dimen/dp_10"
                        />
                    
                </LinearLayout>

               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/dp_180"
                   android:src="@drawable/a10"
                   />
                <ImageView
                    android:layout_width="@dimen/dp_140"
                    android:layout_height="@dimen/dp_80"
                    android:src="@drawable/a11"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>









        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab"
        app:layout_constraintTop_toBottomOf="@id/nl"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
