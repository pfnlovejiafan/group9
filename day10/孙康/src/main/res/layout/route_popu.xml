<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chengshi" />

        <EditText
            android:text="北京"
            android:id="@+id/ev_start_chengshi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/qishi" />

        <EditText
            android:text="西二旗地铁站"
            android:id="@+id/ev_start_weizhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/chengshi" />

        <EditText
            android:text="北京"
            android:id="@+id/ev_stop_chengshi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/jieshu" />

        <EditText
            android:text="百度科技园"
            android:id="@+id/ev_stop_weizhi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="步行"
            android:id="@+id/btn_buxing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="骑行"
            android:id="@+id/btn_qixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="驾车"
            android:id="@+id/btn_jiache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:text="公交"
            android:id="@+id/btn_gongjiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</LinearLayout>